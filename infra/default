
server {
    server_name 158.160.25.95 kittygram56.ddns.net;

    location /api/ {

        proxy_pass http://127.0.0.1:8050;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8050;
    }

    location /media/ {
        alias /var/www/kittygram;
    }

    location / {
        root   /var/www/kittygram/;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kittygram56.ddns.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/kittygram56.ddns.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = kittygram56.ddns.net) {
        return 301 https://$host$request_uri;
